@model Ngocdeaf.Models.Cart

@using Newtonsoft.Json

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    .text-center {
        text-align: center;
    }

    .display-4 {
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .list-product {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        margin: 20px;
    }

    .product {
        flex: 0 0 30%;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        margin: 20px;
        background-color: #fff;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .product img {
            max-width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 20px;
        }

    .title {
        font-weight: bold;
        font-size: 1.2em;
        display: block;
        margin-bottom: 10px;
    }

    .price {
        font-size: 1.2em;
        color: #28a745; /* Green color for price */
        margin-bottom: 15px;
        display: block;
    }

    .add-cart-link {
        display: inline-block;
        padding: 15px 30px;
        font-size: 1.2em;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .add-cart-link:hover {
            background-color: #0056b3;
        }
</style>

<div class="text-center">
    <h1 class="display-4">Chọn sách đi</h1>
</div>

<div class="list-product">
    @foreach (var item in ViewBag.product)
    {
        <div class="product">
            <img src="~/images/@item.ProfilePicture" class="img-responsive" />
            <span class="title">@item.Name</span>
            <span class="price">Price: @item.Price</span>
            <a asp-controller="Carts" asp-action="addCart" asp-route-id="@item.Id" class="add-cart-link">Add to Cart</a>
        </div>
    }
</div>
